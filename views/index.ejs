<!DOCTYPE html>
<html lang="en">
<head>
    <title>Tilawah</title>
    <%- include('necessary-imports.ejs') %>
    <%- include('stylesheets.ejs') %>
</head>
<body>
<div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; display: flex; flex-direction: column; overflow: hidden;">
    <%- include('header.ejs') %>
    <div style="display: flex; flex-direction: row; width: 100%; height: 100%; position:relative; top:70px;">
        <% if (options.hamburger) { %>
            <%- include('sidebar.ejs') %>
        <% } %>
        <div style="width: 100%; height: 100%; overflow-y: auto;" class="main-container">
            <% if (route === "/") { %>
                <%- include('audio-table.ejs', {tableRows: audioList}) %>
            <% } else if (route === "/login") { %>
                <%- include('login-DOM.ejs') %>
            <% } else if (route === "/register") { %>
                <%- include('register-DOM.ejs') %>
            <% } else if (route === "/profile") { %>
                <%- include('profile-DOM.ejs') %>
            <% } %>
        </div>
        <%- include('control-panel.ejs') %>
    </div>
</div>
<script src="javascripts/index.js"></script>
</body>
</html>
