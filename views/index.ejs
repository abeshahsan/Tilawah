<!DOCTYPE html>
<html lang="en">
<head>
    <title>Tilawah</title>
    <%- include('necessary-imports.ejs') %>
    <%- include('stylesheets.ejs') %>
</head>
<body>
<div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; display: flex; flex-direction: column; background-color: #f1efef">
    <%- include('header.ejs') %>
    <div style="height: 575px; margin-bottom: 10px; ">
        <div style="display: flex; flex-direction: row; width: 100%; height: 100%; gap: 15px">
            <% if (options.hamburger) { %>
                <%- include('sidebar.ejs') %>
            <% } %>
            <div style="width: 100%; height: 100%" class="main-container">
                <% if (route === "/" || route === "/home" || route === "/playlist") { %>
                    <%- include('audio-table.ejs', {tableRows: audioList}) %>
                <% } else if (route === "/login") { %>
                    <%- include('login-DOM.ejs') %>
                <% } else if (route === "/register") { %>
                    <%- include('register-DOM.ejs') %>
                <% } else if (route === "/profile") { %>
                    <%- include('profile-DOM.ejs') %>
                <% } %>
            </div>
        </div>
    </div>
    <%- include('control-panel.ejs') %>
</div>
<script src="javascripts/index.js"></script>
</body>
</html>
