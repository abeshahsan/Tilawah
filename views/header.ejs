<link rel="stylesheet" type="text/css" href="stylesheets/header.css">

<div class="header" style="display: flex; flex-direction: row;">
    <div
    <% if (options.hamburger) { %>
        class="hamburger"
    <% } else{ %>
        class="hamburger hidden"
            <% } %>
    >
        <div style="user-select: none; user-focus: none">
            &#9776
        </div>
    </div>

    <!--    <div style="width: 15px"></div>-->

    <div class="home-route">
        <a href="/">
            <div class="logo">
                <img src="images/logo.png" alt="Tilawah">
            </div>
        </a>
    </div>
    <div class="others" style="width: 75%;"></div>
    <div
    <% if (options.loginRegister) { %>
        class="login-register"
    <% } else { %>
        class="login-register hidden"
            <% } %>
    >
        <button type="button" class="login-button">Login</button>
        <button type="button" class="register-button">Register</button>
    </div>
</div>